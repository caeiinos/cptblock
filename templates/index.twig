{% extends 'base.twig' %}

{% block content %}


	<div class="">

		{# Loop for posts #}
		<h2 class="">Posts</h2>
		{% for post in posts %}
			<div>
				<a href="{{ post.link }}">{{ post.title }}</a>
			</div>
		{% endfor %}
		{% include "parts/pagination/pagination.twig" %}

		{# Loop for pages #}
		<h2 class="">Pages</h2>
		{% for page in pages %}
			<div>
				<a href="{{ page.link }}">{{ page.title }}</a>
			</div>
		{% endfor %}

				{# Loop for pages #}
		<h2 class="">Blocks</h2>
		{% for item in blocks %}
			<div>
				<h2>{{ item.title }}</h2>
				{% if post.id == item.related_page %}
				 	<p>{{ item.related_page }}</p>
				{% endif %}
				
			</div>
		{% endfor %}


	</div>
{% endblock %}
